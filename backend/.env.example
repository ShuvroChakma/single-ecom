# Application
PROJECT_NAME=FastAPI Boilerplate
API_V1_STR=/api/v1
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:3001","http://localhost:5173","http://localhost:8000"]

# Database
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=fastapi_db
# Optional: Override with full connection string
# SQLALCHEMY_DATABASE_URI=postgresql+asyncpg://user:pass@localhost/db

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# MongoDB (for audit logs)
MONGO_URI=mongodb://localhost:27017
MONGO_DB_NAME=fastapi_audit

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# OTP Configuration
OTP_LENGTH=6
OTP_EXPIRE_MINUTES=10
OTP_MAX_ATTEMPTS=3
OTP_RESEND_COOLDOWN_SECONDS=60

# Email Configuration (Optional - for production)
# By default, emails are printed to console (EMAIL_ENABLED=false)
# Set EMAIL_ENABLED=true to send actual emails via SMTP

EMAIL_ENABLED=false

# SMTP Settings (required only if EMAIL_ENABLED=true)
# Example for Gmail:
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@yourapp.com
SMTP_FROM_NAME=FastAPI App

# For Gmail:
# 1. Enable 2-factor authentication
# 2. Generate App Password: https://myaccount.google.com/apppasswords
# 3. Use the app password in SMTP_PASSWORD

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3000

# App Settings
DEBUG=false
