# Root Environment Variables (Example)
# Copy this file to .env.dev or .env.prod and update values

# Django Settings
DEBUG=1
SECRET_KEY=your-secret-key-here-change-in-production
DJANGO_ALLOWED_HOSTS=localhost 127.0.0.1 [::1] backend backend:8000

# Database Configuration
DB_ENGINE=django.db.backends.postgresql
DB_NAME=hello_django_dev
DB_USER=hello_django
DB_PASSWORD=hello_django
DB_HOST=db
DB_PORT=5432
DATABASE=postgres

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Celery Configuration (Optional - defaults to REDIS_URL if not set)
# CELERY_BROKER_URL=redis://redis:6379/0
# CELERY_RESULT_BACKEND=redis://redis:6379/0
